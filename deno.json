{
  "imports": {
    "@neon/serverless": "jsr:@neon/serverless@^1.0.1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/assert": "jsr:@std/assert@^0.224.0",
    "@std/testing": "jsr:@std/testing@^0.224.0",
    "hono": "jsr:@hono/hono@^4.8.12",
    "@hono/node-server": "npm:@hono/node-server@^1.13.1",
    "firebase-admin": "npm:firebase-admin@^13.0.1",
    "unique-names-generator": "npm:unique-names-generator@^4.7.1",
    "generate-password": "npm:generate-password@^1.7.1",
    "bcryptjs": "npm:bcryptjs@^2.4.3",
    "jsonwebtoken": "npm:jsonwebtoken@^9.0.2",
    "zod": "npm:zod@^3.24.1",
    "uuid": "npm:uuid@^10.0.0",
    "hono-rate-limiter": "npm:hono-rate-limiter@^0.4.0"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env main.ts",
    "migrate": "deno run --allow-net --allow-read --allow-env db/init.ts migrate",
    "seed": "deno run --allow-net --allow-read --allow-env db/seed.ts",
    "debug": "deno run --inspect-brk --allow-net --allow-read --allow-write --allow-env main.ts",
    "debug-wait": "deno run --inspect-wait --allow-net --allow-read --allow-write --allow-env main.ts",
    "test": "deno test --allow-all tests/",
    "test:unit": "deno test --allow-all tests/db/ tests/services/ tests/middleware/",
    "test:routes": "deno test --allow-all tests/routes/",
    "test:integration": "deno test --allow-all tests/integration/",
    "test:watch": "deno test --allow-all --watch tests/",
    "test:coverage": "deno test --allow-all --coverage=coverage tests/",
    "coverage": "deno coverage coverage",
    "lint": "deno lint",
    "lint:fix": "deno lint --fix",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check main.ts",
    "check:all": "deno check **/*.ts",
    "build": "deno check main.ts && deno lint && deno fmt --check",
    "ci": "deno fmt --check && deno lint && deno check main.ts && deno test --allow-all tests/",
    "qa": "deno task fmt && deno task lint:fix && deno task check && deno task test"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "nodeModulesDir": "auto"
}
